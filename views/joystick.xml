<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
<fest:doctype>html</fest:doctype>
<html>
	<head>
		<meta charset="utf-8" />
		<title>
			<fest:value>json.title</fest:value>
		</title>
		<meta name="viewport" content="
		    initial-scale=1.0,
		    user-scalable=no,
		    maximum-scale=1,
		    minimum-scale=1"/>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />

        <!-- Optional theme -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css" />

		    <link rel="stylesheet" type="text/css" href="client/css/main.css" />
	</head>
	<body>
        <div class="joystick_rules">
            <h1>To play with joystick:</h1>
            <h2>Tilt UP/DOWN to adjust spaceship height</h2>
            <h2>tilt LEFT/RIGHT to move forward/backward</h2>
        </div>
        <div class="joystick_control-form">
            <form>
                <h3 class="joystick_control_form-text">Please, enter the TOKEN you have received on game screen</h3>
                <div class="joystick_control_form-token form-group">
                    <input id="token form-control"/>
                    <button id="connect" type="submit">connect</button>
                </div>
            </form>
		<button id="restart" type="submit">restart</button>

		<div id="message"></div>
        </div>
        <div class="joystick_shoot-button" id="shoot">
            <img src="../../imgs/fire.png"/>
        </div>
	</body>
		<fest:if test="json.development">
			<script data-main="client/joystick" src="js/lib/require.js"></script>
		</fest:if>


		<fest:if test="!json.development">
			<script>
				console.time('load');
			</script>
			<script src="client/build.min.js"></script>
		</fest:if>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
</html>
</fest:template>
