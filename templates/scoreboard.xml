<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="logo" style="background: url(imgs/logo.png)"></div>
    <div class="scoreboard">
        <div class="well">
            <h1>Scoreboard</h1>
            <fest:if test="json.Scores.length == 0">
               <p>No scores have been set yet. Be first to <a href="#">play!</a></p>
            </fest:if>
            <fest:if test="json.Scores.length > 0">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
                </thead>
                <fest:for iterate="json.Scores" index="i">
                <tr>
                    <td>
                        <fest:value>i+1</fest:value>
                    </td>
                    <td>
                        <fest:value>json.Scores[i].attributes.name</fest:value>
                    </td>
                    <td>
                        <fest:value>json.Scores[i].attributes.score</fest:value>
                    </td>
                </tr>
                </fest:for>
            </table>
            </fest:if>
        </div>
        <a href="#main" class="btn btn-primary">Back</a>
    </div>
</fest:template>

