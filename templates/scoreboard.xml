<?xml version="1.0"?>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="scoreboard well">
        <div class="main__game-name">
            <h1>Space Oddity</h1>
            <small>An epic game by Govorovsky and Lifar</small>
        </div>
    	<div class="scoreboard__panel-name">
            <h2>Scoreboard</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
            <fest:if test="json.Scores.length == 0">
                No scores have been set yet. Be first to&nbsp;<a href="#game"> play!</a>
            </fest:if>
            <fest:if test="json.Scores.length > 0">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
                </thead>
                <fest:for iterate="json.Scores" index="i">
                <tr>
                    <td>
                        <fest:value>i+1</fest:value>
                    </td>
                    <td>
                        <fest:value>json.Scores[i].attributes.name</fest:value>
                    </td>
                    <td>
                        <fest:value>json.Scores[i].attributes.score</fest:value>
                    </td>
                </tr>
                </fest:for>
            </table>
            </fest:if>
        </div>
        </div>
        </div>
        <a href="#main" class="btn btn-primary">Back</a>
    </div>
</fest:template>

